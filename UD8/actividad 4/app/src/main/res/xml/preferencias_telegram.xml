<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Notificaciones para chats">
        <SwitchPreferenceCompat
            app:key="chats_privados"
            app:title="Chats privados"
            app:summary="toca para cambiar"
            app:defaultValue="true"/>

        <SwitchPreferenceCompat
            app:key="grupos"
            app:title="Grupos"
            app:summary="sí"
            app:defaultValue="true"/>

        <SwitchPreferenceCompat
            app:key="canales"
            app:title="Canales"
            app:summary="sí"
            app:defaultValue="true"/>

    </PreferenceCategory>
    <PreferenceCategory app:title="Llamadas">
        <ListPreference
            app:key="vibracion"
            app:title="Vibración"
            app:entries="@array/tipos_vibracion_claves"
            app:entryValues="@array/tipos_vibracion_valores"
            app:defaultValue="0"/>
        <ListPreference
            app:key="tono_llamada"
            app:title="Tono de llamada"
            app:entries="@array/tipos_tonos_claves"
            app:entryValues="@array/tipos_tonos_valores"
            app:defaultValue="0"/>
    </PreferenceCategory>
</PreferenceScreen>
